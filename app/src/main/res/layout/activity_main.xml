<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

        <TextView
            android:id="@+id/top_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/lead_title"
            android:textAppearance="?textAppearanceHeadline6"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <ImageView
            android:id="@+id/top_article_picture"
            android:layout_below="@id/top_article_title"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@color/black"
            android:contentDescription="Top story picture" />

        <TextView
            android:id="@+id/top_article_summary"
            android:layout_below="@id/top_article_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lead_summary"
            android:textSize="20sp"
            android:textFontWeight="700"
            />

        <TextView
            android:id="@+id/second_article_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/second_summary"
            android:layout_below="@id/top_article_summary"
            />

        <ImageView
            android:id="@+id/second_article_picture"
            android:layout_below="@id/top_article_summary"
            android:layout_toRightOf="@id/second_article_summary"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/black"
            android:contentDescription="Second story picture" />

</RelativeLayout>
